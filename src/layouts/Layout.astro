---
interface Props {
	title?: string;
	description?: string;
	canonical?: string;
	ogImage?: string;
}

const {
	title = 'Lotus Consulting International Limited â€” Commercial & Transaction Law',
	description = 'Strategic legal counsel for complex commercial transactions. Led by Nilufer, an experienced commercial and transaction lawyer advising businesses across borders.',
	canonical,
	ogImage = '/favicon.ico'
} = Astro.props as Props;

const currentLocale = Astro.currentLocale || 'en';
const site = Astro.site?.toString() || 'https://www.lotusconsulting.example';

// Generate hreflang alternate URLs
const alternateUrls = {
	en: site,
	tr: `${site}tr/`,
	zh: `${site}zh/`
};

import '../styles/global.css' 
---

<!doctype html>
<html lang={currentLocale} class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Favicon -->
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />

		<title>{title}</title>
		<meta name="description" content={description} />
		{canonical && <link rel="canonical" href={canonical} />}

		<!-- Alternate language versions (hreflang) -->
		<link rel="alternate" hreflang="en" href={alternateUrls.en} />
		<link rel="alternate" hreflang="tr" href={alternateUrls.tr} />
		<link rel="alternate" hreflang="zh" href={alternateUrls.zh} />
		<link rel="alternate" hreflang="x-default" href={alternateUrls.en} />

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImage} />
		<meta property="og:locale" content={currentLocale === 'en' ? 'en_US' : currentLocale === 'tr' ? 'tr_TR' : 'zh_CN'} />
		{canonical && <meta property="og:url" content={canonical} />}

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImage} />

		<!-- Basic theming -->
		<meta name="theme-color" content="#0a0a0a" />
	</head>
	<body class="bg-neutral-950 text-neutral-100 selection:bg-lotus-600/30 selection:text-white">
		<slot />
	</body>
</html>
