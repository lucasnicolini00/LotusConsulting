---
import { getTranslations } from '../i18n/utils';

const currentLocale = Astro.currentLocale || 'en';
const t = await getTranslations(currentLocale);

const EMAIL = 'contact@lotusconsulting.example'; // update when known
---
<section id="contact" class="bg-neutral-950 py-20 sm:py-28">
  <div class="container mx-auto px-4">
    <div class="mx-auto max-w-4xl">
      <div class="text-center">
        <h2 class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">{t.contact.title}</h2>
        <p class="mt-3 text-white/70">{t.contact.subtitle}</p>
      </div>

      <form class="mt-10 rounded-2xl border border-white/10 bg-white/4 p-8 backdrop-blur sm:p-12" action={`https://formspree.io/f/YOUR_FORM_ID`} method="POST">
        <div class="space-y-6">
          <!-- Email Input -->
          <div>
            <label for="email" class="block text-sm font-medium text-white/90">Your Email</label>
            <input
              type="email"
              name="email"
              id="email"
              required
              class="mt-2 block w-full rounded-md border border-white/10 bg-white/5 px-4 py-3 text-white placeholder-white/40 backdrop-blur transition focus:border-lotus-600 focus:outline-none focus:ring-2 focus:ring-lotus-600/50"
              placeholder="you@example.com"
            />
          </div>

          <!-- Subject Input -->
          <div>
            <label for="subject" class="block text-sm font-medium text-white/90">Subject</label>
            <input
              type="text"
              name="subject"
              id="subject"
              required
              class="mt-2 block w-full rounded-md border border-white/10 bg-white/5 px-4 py-3 text-white placeholder-white/40 backdrop-blur transition focus:border-lotus-600 focus:outline-none focus:ring-2 focus:ring-lotus-600/50"
              placeholder="How can we help?"
            />
          </div>

          <!-- Message Textarea -->
          <div>
            <label for="message" class="block text-sm font-medium text-white/90">Message</label>
            <textarea
              name="message"
              id="message"
              rows="6"
              required
              class="mt-2 block w-full rounded-md border border-white/10 bg-white/5 px-4 py-3 text-white placeholder-white/40 backdrop-blur transition focus:border-lotus-600 focus:outline-none focus:ring-2 focus:ring-lotus-600/50"
              placeholder="Share your objectives, timelines, and jurisdictions involved..."
            ></textarea>
          </div>

          <!-- Submit Button -->
          <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
            <button
              type="submit"
              class="inline-flex w-full items-center justify-center rounded-md bg-lotus-600 px-6 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-lotus-700 focus:outline-none focus:ring-2 focus:ring-lotus-600 focus:ring-offset-2 focus:ring-offset-neutral-950 sm:w-auto cursor-pointer"
            >
              Send Message
            </button>
            <a href={`mailto:${EMAIL}`} class="text-sm text-white/60 hover:text-white/90">
              Or email directly: {EMAIL}
            </a>
          </div>
        </div>
      </form>

    </div>
  </div>
</section>

