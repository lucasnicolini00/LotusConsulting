---
import { getTranslations } from '../i18n/utils';

const currentLocale = Astro.currentLocale || 'en';
const t = await getTranslations(currentLocale);

const EMAIL = 'contact@lotusconsulting.example'; // update when known
---
<section id="contact" class="bg-neutral-950 py-20 sm:py-28">
  <div class="container mx-auto px-4">
    <div class="rounded-2xl border border-white/10 bg-white/4 p-8 text-center backdrop-blur sm:p-12">
      <h2 class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">{t.contact.title}</h2>
      <p class="mx-auto mt-3 max-w-2xl text-white/70">{t.contact.subtitle}</p>
      <div class="mt-8 flex flex-wrap items-center justify-center gap-3">
        <a href={`mailto:${EMAIL}`} class="inline-flex items-center justify-center rounded-md bg-lotus-600 px-5 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-lotus-700">{t.contact.cta.email.replace('{{email}}', EMAIL)}</a>
        <a href="#services" class="inline-flex items-center justify-center rounded-md border border-white/15 bg-white/5 px-5 py-3 text-sm font-semibold text-white/90 backdrop-blur transition hover:bg-white/10">{t.contact.cta.viewServices}</a>
      </div>
    </div>
  </div>
</section>

