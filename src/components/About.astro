---
import { getTranslations } from '../i18n/utils';

const currentLocale = Astro.currentLocale || 'en';
const t = await getTranslations(currentLocale);

const LAWYER = t.common.site.lawyer;
const expertise = t.about.expertise;
---
<section id="about" class="bg-neutral-950 py-20 sm:py-28">
  <div class="container mx-auto grid gap-12 px-4 md:grid-cols-2 md:items-center">
    <div>
      <h2 class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">{t.about.title}</h2>
      <p class="mt-4 text-white/70 leading-relaxed">{t.about.bio}</p>

      <div class="mt-6 grid gap-8 sm:grid-cols-2">
        <ul class="space-y-3 text-sm text-white/70">
          {expertise.slice(0, 3).map((item: string) => (
            <li class="flex items-start gap-3"><span class="mt-1 h-2 w-2 rounded-full bg-lotus-600"></span><span>{item}</span></li>
          ))}
        </ul>
        <ul class="space-y-3 text-sm text-white/70">
          {expertise.slice(3, 6).map((item: string) => (
            <li class="flex items-start gap-3"><span class="mt-1 h-2 w-2 rounded-full bg-lotus-600"></span><span>{item}</span></li>
          ))}
        </ul>
      </div>

      <!-- Credentials / Accreditations -->
      <div class="mt-8">
        <h3 class="text-sm font-semibold uppercase tracking-wide text-white/70">{t.about.credentials.title}</h3>
        <ul class="mt-3 flex flex-wrap gap-2 text-xs text-white/80">
          {t.about.credentials.list.map((cred: string) => (
            <li class="rounded-full border border-white/10 bg-white/5 px-3 py-1">{cred}</li>
          ))}
        </ul>
      </div>

      <!-- Highlights -->
      <div class="mt-8">
        <h3 class="text-sm font-semibold uppercase tracking-wide text-white/70">{t.about.highlights.title}</h3>
        <div class="mt-3 grid gap-4 sm:grid-cols-2">
          <div>
            <div class="text-xs font-medium text-white/60">{t.about.highlights.industries.title}</div>
            <ul class="mt-2 space-y-1 text-sm text-white/80">
              {t.about.highlights.industries.list.map((industry: string) => (
                <li>{industry}</li>
              ))}
            </ul>
          </div>
          <div>
            <div class="text-xs font-medium text-white/60">{t.about.highlights.regions.title}</div>
            <ul class="mt-2 space-y-1 text-sm text-white/80">
              {t.about.highlights.regions.list.map((region: string) => (
                <li>{region}</li>
              ))}
            </ul>
          </div>
        </div>
      </div>

      <!-- Values / Approach -->
      <div class="mt-8">
        <h3 class="text-sm font-semibold uppercase tracking-wide text-white/70">{t.about.approach.title}</h3>
        <ul class="mt-3 space-y-2 text-sm text-white/80">
          {t.about.approach.list.map((item: string) => (
            <li>{item}</li>
          ))}
        </ul>
      </div>

      <p class="mt-8 text-sm text-white/60">{t.about.hobbies}</p>
    </div>
    <div class="relative">
      <div class="pointer-events-none absolute -inset-6 -z-10 rounded-3xl bg-linear-to-tr from-lotus-600/20 via-purple-600/10 to-indigo-500/10 blur-3xl"></div>
      <div class="rounded-2xl border border-white/10 bg-white/5 p-8 backdrop-blur">
        <!-- Portrait / Accreditations area (placeholder) -->
        <div class="mb-6 flex items-center gap-4">
          <img src="/Nilufer-Ozder-Genel-Energy-thumbnail.jpg" alt="Portrait of {LAWYER}" class="h-14 w-14 rounded-full object-cover" width="56" height="56" loading="lazy" />
                    <ul class="flex flex-wrap gap-2 text-[11px] text-white/70">
            {t.about.credentials.list.map((cred: string) => (
              <li class="rounded-full border border-white/10 bg-white/5 px-2.5 py-1">{cred}</li>
            ))}
          </ul>
        </div>
        <blockquote class="text-sm leading-relaxed text-white/80">
          <p>"{t.about.testimonial.quote}"</p>
          <footer class="mt-4 text-xs font-medium text-white/60">â€” {t.about.testimonial.author}</footer>
        </blockquote>
      </div>
    </div>
  </div>
</section>
